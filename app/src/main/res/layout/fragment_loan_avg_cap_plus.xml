<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/loan_ordinary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <include layout="@layout/loan_head"/>

        <include layout="@layout/loan_spinner"/>

        <include layout="@layout/loan_rear"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="每月还款（元）"
                style="@style/TextViewStyle" />

            <EditText
                android:id="@+id/edit_MonSumAvgCapPlus"
                style="@style/EditTextResultStyle" />

        </LinearLayout>

        <include layout="@layout/btn_cal"
            android:id="@+id/btn_Cal"/>

    </LinearLayout>

</RelativeLayout>